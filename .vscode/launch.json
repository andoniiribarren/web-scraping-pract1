    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },        
        {
            "name": "PR1-Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/source/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/",
            "justMyCode": false,
            "sudo": false
        },
        {
            "name": "PR1-Test Publication",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/source/publication.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/",
            "justMyCode": false,
            "sudo": false
        },

    ]
}